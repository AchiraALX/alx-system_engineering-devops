global
    log /dev/log local0
    log /dev/log local1 notice
    chroot /var/lib/haproxy
    stats socket /run/haproxy/admin.sock mode 660 level admin
    stats timeout 30s
    user haproxy
    group haproxy
    daemon

defaults
    log global
    mode http
    option httplog
    option dontlognull
    timeout connect 5000
    timeout client 50000
    timeout server 50000

frontend ssl_frontend
    bind *:443 ssl crt /etc/letsencrypt/csr/0000_csr-certbot.pem
    mode http
    option httplog
    default_backend ssl_backend

backend ssl_backend
    mode http
    balance roundrobin
    option httplog
    server web-01 192.168.0.1:80 check
    server web-02 192.168.0.2:80 check

frontend http_frontend
    bind *:80
    mode http
    option httplog
    default_backend http_backend

backend http_backend
    mode http
    balance roundrobin
    option httplog
    http-request set-header Host blissprism.tech
    http-request set-header X-Forwarded-Proto http
    http-response set-header X-Content-Type-Options nosniff
    server web-01 192.168.0.1:80 check
    server web-02 192.168.0.2:80 check

listen stats
    bind :9000
    stats enable
    stats uri /haproxy_stats
    stats refresh 10s
    stats auth achira:@lazyachiraJ1

